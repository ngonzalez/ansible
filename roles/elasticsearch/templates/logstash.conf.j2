input {
  gelf {
    port => "{{ logstash.gelf_port }}"
    add_field => { "_input" => "gelf" }
  }
  beats {
    port => "{{ logstash.beats_port }}"
    add_field => { "_input" => "beats" }
  }
  tcp {
    port => "{{ logstash.tcp_port }}"
    add_field => { "_input" => "syslog" }
  }
}
filter {
  if [_input] == "syslog" {
    grok {
      patterns_dir => ["{{ logstash.patterns_path }}"]
      match => [ "message",  "%{SYSLOG}" ]
      tag_on_failure => ["grok_not_syslog"]
      overwrite => [ "host", "message" ]
    }
  }
  if [message] =~ /^{.*}$/ {
    json {
      source => "message"
      target => "app"
      remove_field => ["message"]
    }
  }
}
output {
  if [_input] == "gelf" {
    elasticsearch {
      hosts => ["{{ elasticsearch.host }}:{{ elasticsearch.port }}"]
      user => "logstash"
      index => "logstash-gelf-%{+YYYY.MM.dd}"
    }
  }
  if [_input] == "syslog" {
    elasticsearch {
      hosts => ["{{ elasticsearch.host }}:{{ elasticsearch.port }}"]
      user => "logstash"
      index => "logstash-linux-%{+YYYY.MM.dd}"
    }
  }
  if [_input] == "beats" {
    elasticsearch {
      hosts => ["{{ elasticsearch.host }}:{{ elasticsearch.port }}"]
      user => "logstash"
      index => "logstash-beats-%{+YYYY.MM.dd}"
    }
  }
}
