filebeat.inputs:
- type: log
  enabled: true
  paths:
    - /var/log/**/*.log

filebeat.config.modules:
  path: ${path.config}/modules.d/*.yml
  reload.enabled: false

setup.template.settings:
  index.number_of_shards: 3

{% if elk_server is defined %}
setup.kibana:
  host: "{{ setup_kibana_host }}:{{ setup_kibana_port }}"
{% endif %}

output.logstash:
  hosts: ["{{ logstash_output_host }}:{{ logstash_output_port }}"]
